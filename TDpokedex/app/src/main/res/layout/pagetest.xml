<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Black"
    android:padding="8dp">

    <ImageView
        android:id="@+id/PokeImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        app:layout_constraintTop_toBottomOf="@id/PokeName"
        >
    </ImageView>


    <TextView
            android:id="@+id/PokeName"
        android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textColor="@color/white"
        android:textSize="70dp"
        android:text="@string/name"
            tools:context=".pagetest" />
    <TextView
        android:id="@+id/PokeDesc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:textSize="15dp"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@id/PokeSize"
        app:layout_constraintTop_toBottomOf="@id/PokeImage"
        tools:context=".pagetest" />
    <TextView
        android:id="@+id/PokeSize"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="15dp"
        android:text="16m"
        app:layout_constraintBottom_toTopOf="@id/PokeWeight"
        app:layout_constraintTop_toBottomOf="@id/PokeDesc"
        tools:context=".pagetest" />
    <TextView
        android:id="@+id/PokeWeight"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="15dp"
        android:text="3kg"
        app:layout_constraintBottom_toTopOf="@id/PokeTypes"
        app:layout_constraintTop_toBottomOf="@id/PokeSize"
        tools:context=".pagetest" />
    <TextView
        android:id="@+id/PokeTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="types"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/PokeWeight"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        tools:context=".pagetest" />
</androidx.constraintlayout.widget.ConstraintLayout>










